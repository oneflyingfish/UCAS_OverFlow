<p id="notice"><%= notice %></p>
<h1>资源共享区</h1>

<table>
  <thead>
    <tr>
      <th>标题</th>
      <th>板块</th>
      <th>回复数</th>
      <th>点击数</th>
      <th>发布者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resource_blogs.each do |resource_blog| %>
      <tr>
        <td><%= resource_blog.title %></td>
        <td><%= resource_blog.tag %></td>
        <td><%= resource_blog.response_count %></td>
        <td><%= resource_blog.click_count %></td>
        <td><%= resource_blog.user.name %></td>
        <td><%= link_to '显示', resource_blog %></td>
        <td><%= link_to '修改', edit_resource_blog_path(video_blog) %></td>
        <td><%= link_to '删除', resource_blog, method: :delete, data: { confirm: '确定要删除吗?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '发布资源', new_resource_blog_path %>
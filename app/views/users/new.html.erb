<% provide(:title, '注册') %>
<h1>用户注册</h1>

<%= form_for @user do |f| %>
    <%= f.label :name, "姓名" %>
    <%= f.text_field :name %>
    <%= f.label :user_number, "学号" %>
    <%= f.text_field :user_number %>
    <%= f.label :email, "邮箱" %>
    <%= f.email_field :email %>
    <%= f.label :password, "密码"%>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation, "验证密码" %>
    <%= f.password_field :password_confirmation %>
    <br>
    <%= f.radio_button :sex, "男", :checked => true %>男
    <%= f.radio_button :sex, "女" %>女
    <br>
    <%= f.submit "创建账户" %>
<% end %>

<%= link_to 'Back', users_path %>

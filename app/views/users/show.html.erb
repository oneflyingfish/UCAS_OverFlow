<% provide(:title, @user.name+"个人信息") %>


<%= render "share/flash_message.html"%><br>

<div class="container-fluid ">
  <%= render partial: 'user_navigation.html' %>

  <div class="col-sm-11">
    <div>
      <%= gravatar_image(@user) %><br><br><br>

      <div class="panel panel-info filterable">
        <div class="panel-heading">
          <h7>基本信息</h7>
        </div>

        <div class="panel-body">
          <table class="table table-responsive table-condensed table-hover">
            <tbody>
              <tr>
                <td width="240px">姓名：</td>
                <td><%= @user.name %></td>
              </tr>

              <tr>
                <td>性别：</td>
                <td><%= @user.sex %></td>
              </tr>

              <tr>
                <td>邮箱：</td>
                <td><%= @user.email %></td>
              </tr>

              <tr>
                <td>管理员：</td>
                <td><%=  @user.translate_admin %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <div class="panel panel-warning filterable">
        <div class="panel-heading">
          <h7>学习信息</h7>
        </div>

        <div class="panel-body">
          <table class="table table-responsive table-condensed table-hover">
            <tbody>
              <tr>
                <td width="240px">年级：</td>
                <td><%= @user.translate_grade %></td>
              </tr>

              <tr>
                <td>学号：</td>
                <td><%= @user.user_number %></td>
              </tr>

              <tr>
                <td>学院/研究所：</td>
                <td><%= @user.translate_organization %></td>
              </tr>

              <tr>
                <td>一级学科：</td>
                <td><%= @user.translate_project %></td>
              </tr>

              <tr>
                <td>学生类型：</td>
                <td><%= @user.translate_type %></td>
              </tr>
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>
</div>
<%= form_for @user do |f| %>
    <%= f.label :name, "姓名：" %>
    <%= f.text_field :name, :value => @user.name%>
    <%= f.label :user_number, "学号：" %>
    <%= f.text_field :user_number, :value => @user.user_number %>
    <%  if @is_new_user %>
        <%= f.label :email, "邮箱：" %>
        <%= f.email_field :email, :value => @user.email %>
    <% else %>
        <%= f.label :new_email, "邮箱：" %>
        <%= f.email_field :new_email, :value => @user.email %>
    <% end %>
    <%= f.label :password, "密码："%>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation, "验证密码：" %>
    <%= f.password_field :password_confirmation %>
    <br>
    <%= f.radio_button :sex, "男", :checked => true %><span>男</span>
    <%= f.radio_button :sex, "女" %><span>女</span>
    <br><br>
    <%= f.submit yield(:submit_button_text) %>
<% end %>





<div style="margin:40px">
<h1 style="text-align:center; ">UCAS_Overflow</h1>
</div>

<div name = "user-part" class="user-part">
    <table class = "table table-hover user-part-table">
        <tr> <td ><%= link_to gravatar_image_for_exist_user(@cur_user),  @user_url %></td></tr>
        <tr> <td ><%= link_to "我的博客", user_videos_url %></td></tr>
        <tr> <td ><%= link_to "我的视频", user_texts_url %></td></tr>
        <tr> <td ><%= link_to "我的资源", user_resources_url %></td></tr>
        <tr> <td ><%= link_to "退出", login_out %></td></tr>
    </table>  

</div>
</div>
<div name = "blog-part" class="blog-part">
    <table class="blog-part-table"  style="margin-right: 0px; margin-left: 120px">
        <tr>
            <td style="width:50%; padding-bottom: 30px;"><%= render "hotest_blogs" %></td>
            <td style="width:50%; padding-bottom: 30px;"><%= render "video_blogs" %></td>
        </tr>
        <tr> 
            <td style="width:50%; padding-bottom: 60px;"><%= render "text_blogs" %></td> 
            <td style="width:50%; padding-bottom: 60px;"><%= render "resource_blogs" %></td> 
        </tr>
       
    </table>  
</div>

<% provide(:title, '发布视频') %>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="blog_form_title">发布视频</h3>
    </div>
    <div class="panel-body">
    <%= form_for @video_blog,class: "form-inline", role:"form" do |f|%>
        <div class="form-group">
            <div class="input-group-addon"><%= f.label :title, "标题" %></div>
            <%= f.text_field :title, class: 'form-control', placeholder: "请输入标题"  %>
        </div>
        <div class="form-group">
            <div class="input-group-addon"><%= f.label :tag_id, "标签" %></div>
            <%= f.select :tag_id, @all_tags, class: 'form-control', prompt: "请选择板块"%>
        </div>
        <div class="input-group-addon">
            <div class="col-xs-6">
                <%= f.file_field :file_path %>
            </div>
        </div>
        <br><br>
        <div class = "leftBottom" > 
            <%= f.submit "发布帖子",class: "btn btn-primary" %>
        </dev>
    <% end %>


<p id="notice"><%= notice %></p>
<h1>MOOC区</h1>

<table>
  <thead>
    <tr>
      <th>标题</th>
      <th>板块</th>
      <th>回复数</th>
      <th>点击数</th>
      <th>发布者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @video_blogs.each do |video_blog| %>
      <tr>
        <td><%= video_blog.title %></td>
        <td><%= video_blog.tag %></td>
        <td><%= video_blog.response_count %></td>
        <td><%= video_blog.click_count %></td>
        <td><%= video_blog.user.name %></td>
        <td><%= link_to '显示', video_blog %></td>
        <td><%= link_to '修改', edit_video_blog_path(video_blog) %></td>
        <td><%= link_to '删除', video_blog, method: :delete, data: { confirm: '确定要删除吗?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


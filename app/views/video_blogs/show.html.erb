<html>
<% provide(:title, @video_blog.title) %>
<%= render "share/flash_message.html"%> 

<div class="panel panel-primary">
    <div class="panel-heading">
      <h2>
        <%= link_to '视频区', video_blogs_path, style: "color:white" %>
      </h2>
    </div>


    <div class="panel-body">

      <div>
        <h2><%= @video_blog.title %></h2>
      </div>
      <p class=leading><%= @video_blog.content %></p>

      <div class="col-sm-12 videoBlogMessage">
        <h5>作者：
          <%= @video_blog.user.name %>
          &nbsp&nbsp板块：
          <%= @video_blog.tag.name %>
          &nbsp&nbsp回复数：
          <%= @video_blog.response_count %>
          &nbsp&nbsp点击数：
          <%=  @video_blog.click_count %>
          &nbsp&nbsp
          <%= @video_blog.created_at %>
        </h5>
      </div> 
      <br>
      <br>
      <br>
      <br>
      <%= video_tag @video_blog.file_path, :size => "320x240", :controls => true %>
  
  
      <%= render "share/new_video_reply" %>
    </div>

<!--%= link_to '编辑', edit_video_blog_path(@video_blog) %--> 

</html>


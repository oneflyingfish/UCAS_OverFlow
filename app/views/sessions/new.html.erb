<% provide(:title, "用户登录") %>

<%= render "share/flash_message.html"%>

<h3>登录</h3>

<%= form_for(:session, url: login_path) do |f| %>
    <%= f.label :account, "学号/邮箱" %>
    <%= f.text_field :account%>

    <%= f.label :password, "密码" %>
    <%= f.password_field :password %>

    <%= f.label :remember_me do %>
        <%= f.check_box :remember_me %><span>下次自动登录         
    <% end %>

    <%= f.submit "登录"%>
<% end %>

新用户？<%= link_to "立即注册！", new_user_path %>
